<div class="container-show-tree">

  <div class="tree-img">
    <%= image_tag "arbre2.jpg", alt: "alttext", width: "100%"%>
  </div>

    <div class="show-right-part">
    <div class ="link-back">
      <%= link_to "Back", trees_path %>
    </div>
    <div class="title-show">
      <h1><%=@tree.name%></h1>
      <p><%=@tree.species%></p>
    </div>

    <div class="description">
      <div class="title-descr">
        <p><%=@tree.description%></p>
      </div>
    </div>

    <div class="trees-aspects">
      <div class="size-tree">
        <h2></h2><p><%=@tree.size%></p>
        <i class="fas fa-tree small"></i>
        <i class="fas fa-tree medium"></i>
        <i class="fas fa-tree large"></i>
      </div>
      <div class="title-w">
        <h2></h2><p><%=@tree.weight%></p>
      </div>
      <div class= "card-price">
        <div class="title-show">
          <h2>$<%=@tree.price%></h2>
        </div>
      </div>
    </div>

    <div class="card-owner">
      <h2></h2>
      <p>This tree belong to <%=@tree.user.first_name%> <%=@tree.user.last_name%>, <%=@tree.address%></p>
    </div>


    <div class="formul">
        <%= simple_form_for [@tree, @rental] do |f| %>
      <div class="container_one">
        <%= f.input :start_on, as: :date %>
        <%= f.input :end_on, as: :date %>
        <%= f.submit "Book Now"%>
      </div>
      <% end %>
    </div>
