<div class="title-owner">
  <h1>See your current rentals</h1>
</div>

<% @rentals.each do |rental|%>
  <div class="card-owner-rentals">
    <div class="text-info-rentals">
      <h3><i class="fas fa-user"></i> <%= rental.user.first_name %> <%= rental.user.last_name %></h3>
      <h3><%= rental.created_at.strftime("%d %m %Y") %></h3>

      <h3><%= rental.start_on.strftime("%d %m %Y") %><br><i class="fas fa-angle-double-down"></i></h3>
      <h3><%= rental.end_on.strftime("%d %m %Y") %></h3>

      <h2><%= rental.tree.name %></h2>
      <h3><%= rental.status %></h3>
      <h3><i class="fas fa-hand-holding-usd"></i> $<%= rental.total_price %></h3>

      <h3>You updated this rental on <%= rental.updated_at.strftime("%d %m %Y") %></h3>

      <div class="confirmation">
        <% if rental.status == 'pending' %>
        <div class="flex-buttons">
          <%=  link_to 'Accept Rental', accept_owner_rental_path(rental.id), class: "btn btn-success", method: :patch%>
          <%= link_to 'Refuse Rental', refuse_owner_rental_path(rental.id), class: "btn btn-danger", method: :patch %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
