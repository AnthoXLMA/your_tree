<p><%= current_user.email %></p>

<h1>See your current rentals</h1>

<div>
<% @rentals.each do |rental|%>
  <h3><%= rental.user.first_name %> <%= rental.user.last_name %> has made this rental</h3>
  <h3>This rental has been booked on <%= rental.created_at %></h3>

  <h3>From <%= rental.start_on %></h3>
  <h3>To <%= rental.end_on %></h3>

  <h3><%= rental.tree.name %></h3>
  <h3><%= rental.status %></h3>
  <h3>$<%= rental.total_price %></h3>

  <h3>You updated this rental on <%= rental.updated_at %></h3>

<% if rental.status == 'pending' %>

      <div class="button btn btn-confirm">
      <%=  link_to 'Accept Rental', accept_owner_rental_path(rental.id), method: :patch %>
      </div>

      <div class="button btn btn-confirm">
      <%= link_to 'Refuse Rental', refuse_owner_rental_path(rental.id), method: :patch %>
      </div>
<% else %>
<% end %>
<% end %>
</div>
